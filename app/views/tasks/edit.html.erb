<%= render 'header' %>
<div class="container mt-5">
  <h1 class="text-center">Edit Task</h1>
  <div class="row">
  	<% if notice.present? %>
  	    <div class="alert alert-success">
          <%= notice %>
        </div>  
    <% end %>
    <div class="col-md-6 mx-md-auto align-self-center">
      <div class="card mt-5">
        <%= render 'form', task: @task %>
      </div>  
    </div>
  </div>
</div>
